# Twitter Clone - Environment Configuration
# Copy file ini ke .env dan sesuaikan dengan data Anda

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# PostgreSQL Database Configuration (Primary)
DB_ENGINE=postgresql
DB_NAME=twitter_db
DB_USER=postgres
DB_PASSWORD=your_postgresql_password
DB_HOST=localhost
DB_PORT=5432

# MySQL Database Configuration (Alternative - uncomment to use)
# DB_ENGINE=mysql
# DB_NAME=twitter_db
# DB_USER=your_mysql_user
# DB_PASSWORD=your_mysql_password
# DB_HOST=localhost
# DB_PORT=3306

# SQLite Database Configuration (Development only - uncomment to use)
# DB_ENGINE=sqlite3
# DB_NAME=db.sqlite3

# Other Settings
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=Asia/Jakarta
LANGUAGE_CODE=id-id

# Database (PostgreSQL untuk production)
DB_NAME=twitter_db
DB_USER=twitter_user  
DB_PASSWORD=password-database-anda
DB_HOST=localhost
DB_PORT=5432